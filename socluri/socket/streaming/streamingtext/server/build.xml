<project name="StreamingText" default="Compile" basedir=".">
  
  <!-- set global properties for this build -->
  <property name="build.dir" location="mods"/>

  <path id="myclasspath">
    <!--<fileset dir="../lib">
       <include name="*.jar"/>
    </fileset> -->
    <pathelement path="${build.dir}"/>
  </path> 
  
  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <delete dir="${build.dir}"/>
    <mkdir dir="${build.dir}"/>
  </target>

  <target name="Compile" depends="init" description="compile the source " >
    <javac srcdir="src" destdir="${build.dir}" includeantruntime="false"
    classpathref="myclasspath">
      <compilerarg value="-Xlint"/>           
    </javac>
  </target>

  <target name="text-Server"> 
    <java classname="streamingtext.MyMServer" classpathref="myclasspath" fork="true"
    modulepath="mods" module="streamingtext"/>
  </target>

  <target name="text-Client">
    <java classname="streamingtext.StreamClient" classpathref="myclasspath" fork="true"
    modulepath="mods" module="streamingtext"/>
  </target>  
</project>





